/* pages/deposit/deposit.wxss */
.wrapper {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.number_wrapper, .btn_wrapper {
  width: 100%;
  flex: 2;
  padding: 60rpx 0;
}

.btn_wrapper button {
  width: 80%;
  margin-top: 60rpx;
}

.ride_time_wrapper {
  flex: 6;
}

.ride_time_wrapper .ride_time {
  font-size: 100rpx;
  font-weight: 600;
}